<% if paginate && num_pages > 1 %>
    <p>Page <%= page_number %> of <%= num_pages %></p>

    <% if prev_page %>
        <p><%= link_to 'Previous page', prev_page %></p>
    <% end %>
<% end %>

<div class="PostCards">
  <% page_articles.each_with_index do |article, i| %>
      <section class="PostCards-card <%= "#{"PostCards-card--#{article.data.color}"  if article.data.color }" %>">
        <%= link_to article.data.title, article, class: 'PostCards-title' %>
        <div class="PostCards-date">
          <%= article.data.date.strftime('%-m.%-d.%y') %>
        </div>
        <div class="PostCards-tags">
          <% article.tags.each do |tag, articles| %>
            <%= link_to tag, tag_path(tag), class: 'PostCards-tag' %>
          <% end %>
        </div>
        <%= link_to 'More >', article, class: 'PostCards-more' %>
      </section>
  <% end %>
</div>

<% if paginate %>
    <% if next_page %>
        <p><%= link_to 'Next page', next_page %></p>
    <% end %>
<% end %>
