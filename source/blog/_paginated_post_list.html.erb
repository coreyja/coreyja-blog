<% if paginate && num_pages > 1 %>
    <p>Page <%= page_number %> of <%= num_pages %></p>

    <% if prev_page %>
        <p><%= link_to 'Previous page', prev_page %></p>
    <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
    <section class="BlogPost-title PostTitle <%= "#{"PostTitle--#{article.data.color}"  if article.data.color }" %>">
      <%= link_to article.data.title, article, class: 'PostTitle-title' %>
      <h4 class="PostTitle-date">
        <%= article.data.date.strftime('%-m.%-d.%y') %>
      </h4>
      <h4 class="PostTitle-author">
        <%= article.data.author %>
      </h4>
    </section>
<% end %>

<% if paginate %>
    <% if next_page %>
        <p><%= link_to 'Next page', next_page %></p>
    <% end %>
<% end %>
