<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Blog Title<%= ' - ' + current_article.title unless current_article.nil? %></title>
  <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

  <%= stylesheet_link_tag :site %>
  <%= javascript_include_tag :all %>
</head>
<body>
  <div class="Layout">
    <%= partial 'shared/header', locals: { header_class: 'Layout--header' } %>

    <div id="main" role="main" class="Layout--content">
      <%= yield %>
    </div>
  </div>
</body>
<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,700|Oswald:500,600,700" rel="stylesheet">
</html>
